# RadioX Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
TZ=UTC

# Frontend
FRONTEND_URL=https://radiox.com
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
API_URL=https://api.radiox.com

# Backend
API_PORT=5000
JWT_SECRET=your-secure-jwt-secret-key-here
JWT_EXPIRE=7d
COOKIE_SECRET=your-secure-cookie-secret-key-here

# Database
MONGO_USERNAME=radiox
MONGO_PASSWORD=your-secure-mongo-password-here
MONGO_DB=radiox
MONGO_APP_USERNAME=radiox_app
MONGO_APP_PASSWORD=your-secure-app-password-here

# Docker
DOCKER_REGISTRY=your-docker-registry
TAG=latest

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=radiox-media
BACKUP_S3_BUCKET=radiox-backups

# External APIs
X_API_KEY=your-x-api-key
X_API_SECRET=your-x-api-secret
GOOGLE_CLOUD_TTS_KEY=your-google-cloud-tts-key

# Monitoring
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_AI_RECOMMENDATIONS=false
